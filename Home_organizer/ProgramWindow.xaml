                                <GridView>
                                    <GridViewColumn  Width="200"  DisplayMemberBinding="{Binding Period}">
                                        <GridViewColumn.Header >
                                            <TextBlock Text="Період" FontSize="16" Foreground="Cyan" />
                                        </GridViewColumn.Header>
                                    </GridViewColumn>
                                    <GridViewColumn Width="250"  DisplayMemberBinding="{Binding GasDifferent}">
                                        <GridViewColumn.Header >
